<% provide(:title, "ログイン画面") %>
<main>
<h4 class="d-flex justify-content-center mt-5 mb-3">ログイン画面</h4>
<%= form_with(scope: :session, local: true) do |f| %>
    <div class="d-flex justify-content-center">
      <div>
        <label><%= f.label :email, "メールアドレス", class: "mb-0" %></label>
        <p><%= f.email_field :email %></p>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div>
        <label><%= f.label :password, "パスワード", class: "mb-0" %></label>
        <p><%= f.password_field :password %></p>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>

  <div class="d-flex justify-content-center">
    <a href="">まだ登録がお済みでない方はこちら</a>
  </div>

</main>