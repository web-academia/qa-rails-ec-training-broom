<%= render 'shared/object_error_messages', object: @user %>

<% provide(:title, "ユーザー情報修正") %>
  <main>
    <h2 class="text-center mt-5">ユーザ情報修正</h2>
    <%= form_with(model: @user, local: true) do |f| %>

      <table width="50%" style="margin-left:350px">
        <tr height="40">
          <td align="center">
            氏名<span style="float: right">姓</span>
          </td>
          <td>
            <%= f.text_field :last_name, style: "margin-left:10px", maxlength: 10 %><span style="margin-left:35px">名</span><%= f.text_field :first_name, style: "margin-left:10px", maxlength: 10 %>
          </td>
        </tr>
  
        <tr height="40">
          <td align="center">
            住所<span style="float: right">〒</span>
          </td>
          <td colspan="2">
            <%= f.text_field :zipcode, style: "margin-left:10px", size: 25 %>
          </td>
        </tr>
  
        <tr height="40">
          <td align="right">
            都道府県
          </td>
          <td colspan="2">
            <%= f.text_field :prefecture, style: "margin-left:10px", size: 50, maxlength: 5 %>
          </td>
        </tr>
  
        <tr height="40">
          <td align="right">
            市町村区
          </td>
          <td colspan="2">
            <%= f.text_field :municipality, style: "margin-left:10px", size: 50, maxlength: 10 %>
          </td>
        </tr>
  
        <tr height="40">
          <td align="right">
            番地
          </td>
          <td colspan="2">
            <%= f.text_field :address, style: "margin-left:10px", size: 50, maxlength: 15 %>
          </td>
        </tr>
  
        <tr height="40">
          <td align="right">
            マンション<br>部屋番号</br>
          </td>
          <td colspan="2">
            <%= f.text_field :apartments, style: "margin-left:10px", size: 50, maxlength: 20 %>
          </td>
        </tr>
  
        <tr height="40">
          <td align="right">
            メールアドレス
          </td>
          <td colspan="2">
            <%= f.email_field :email, style: "margin-left:10px", size: 50 %>
          </td>
        </tr>
  
        <tr height="40">
          <td align="right">
            電話番号
          </td>
          <td colspan="2">
            <%= f.text_field :phone_number, style: "margin-left:10px", size: 50, pattern: "(^[0-9]+$){1,15}" %>
          </td>
        </tr>
      </table>

      <div class="row mt-5">
        <div class="col-5">
          <div class="d-flex justify-content-end">
            <%= f.submit "修正", class: "btn btn-primary" %>
          </div>
        </div>
  
        <div class="col-5 offset-2">
          <%= f.submit "退会", class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </main>